<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sub_app_background">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/crypto_broker_image"
        android:isScrollContainer="true"
        android:hapticFeedbackEnabled="false"
        android:src="@drawable/img_new_user_camera"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_above="@+id/crypto_broker_name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/crypto_broker_name"
        android:textColor="#ffffff"
        android:editable="true"
        android:selectAllOnFocus="true"
        android:background="#7d000000"
        android:padding="12dp"
        android:layout_alignParentStart="true"
        android:hint="Enter name"
        android:textSize="22dp"
        android:layout_above="@+id/create_crypto_broker_button">
        <requestFocus />
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/create_crypto_broker_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:text="@string/create"
        android:gravity="center_vertical|center_horizontal"
        android:background="#292929"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:id="@+id/camara"
        android:src="@drawable/camera_icon_2"
        android:scaleType="fitXY"
        android:adjustViewBounds="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#64000000" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:id="@+id/galeria"
        android:src="@drawable/galery_icon_2"
        android:scaleType="fitXY"
        android:background="#64000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>