<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/cbw_market_rate_view_pager_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cbw_stock_chart_background_gradient"
    android:visibility="visible"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/cbw_stock_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/cbw_stock_chart_indicator"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="8dp"
        app:fillColor="#142f41"
        app:pageColor="#b1ffffff"
        app:radius="5dp"
        app:centered="true"
        app:strokeColor="#00ffffff"
        app:strokeWidth="1dp"
        />
</LinearLayout>