<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bw_body_gradient_background"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-86dp"
        android:background="@drawable/bw_reflex_image"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="86dp"
            android:orientation="vertical"
            android:visibility="visible">

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="45dp"
                android:gravity="center_horizontal"
                android:text="ADD ACCOUNT"
                android:textColor="#fff"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold" />

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:text="Please choose an account number and currency"
                android:textColor="#fff"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/account_number"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:hint="Enter account number"
                android:textColor="#fff"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/account_alias"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:hint="Enter alias"
                android:textColor="#fff"
                android:textSize="@dimen/text_size" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:orientation="vertical"
                android:paddingLeft="60dp"
                android:paddingRight="60dp">

                <Spinner
                    android:id="@+id/bnk_add_account_currency_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawSelectorOnTop="true" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>